#!/usr/bin/env bash

ray stop --force

ulimit -n 65536 && \
    RAY_BACKEND_LOG_LEVEL=debug \
    RAY_start_initial_python_workers_for_first_job=true \
    RAY_preload_python_modules=torch,tensorflow,dask,pandas,transformers \
    RAY_isolate_workers_across_task_types=false \
    RAY_isolate_workers_across_resource_types=false \
    ray start --head --port=6379 --dashboard-port=8265 --no-monitor --redis-password='' --object-manager-port=8076 --node-manager-port=8912 --metrics-export-port=8085 --dashboard-agent-listen-port=52365 --dashboard-agent-grpc-port=6823

